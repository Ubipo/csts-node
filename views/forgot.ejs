<!-- views/forgot.ejs -->
<!doctype html>
<html>
<head>
    <title>csts | Forgot</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-question"></span> Forgot Password</h1>

    <!-- show any error messages that come back -->
    <% if (msgError.length > 0) { %>
        <div class="alert alert-danger"><%= msgError %></div>
    <% } %>

    <!-- show any info messages that come back -->
    <% if (msgInfo.length > 0) { %>
        <div class="alert alert-info"><%= msgInfo %></div>
    <% } %>

    <!-- FORGOT FORM -->
    <form action="/forgot" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Submit</button>
    </form>

    <hr>

    <p>Want to login instead? <a href="/login">Login</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>

</div>
</body>
</html>
